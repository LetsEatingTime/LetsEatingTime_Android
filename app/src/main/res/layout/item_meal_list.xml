<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/meal_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FAFAFA">
    <LinearLayout
        android:id="@+id/ll_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bac_meal_list"
        android:clickable="true">
        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/black"
            android:textSize="20sp"
            android:fontFamily="@font/pretendardmedium"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/ic_arrow_down"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_down"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_breakfast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bac_meal_list"
        android:padding="15dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="5dp"
        android:gravity="start"
        android:visibility="gone">
        <ImageView
            android:id="@+id/iv_breakfast"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/breakfast"/>
        <TextView
            android:id="@+id/tv_breakfast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_gravity="center"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:fontFamily="@font/pretendardregular"
            android:layout_marginStart="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_lunch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bac_meal_list"
        android:padding="15dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="10dp"
        android:gravity="start"
        android:visibility="gone">
        <ImageView
            android:id="@+id/iv_lunch"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/lunch"/>
        <TextView
            android:id="@+id/tv_lunch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_gravity="center"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:fontFamily="@font/pretendardregular"
            android:layout_marginStart="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_dinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bac_meal_list"
        android:padding="15dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="10dp"
        android:gravity="start"
        android:visibility="gone">
        <ImageView
            android:id="@+id/iv_dinner"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/dinner"/>
        <TextView
            android:id="@+id/tv_dinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_gravity="center"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:fontFamily="@font/pretendardregular"
            android:layout_marginStart="10dp"/>
    </LinearLayout>
</LinearLayout>