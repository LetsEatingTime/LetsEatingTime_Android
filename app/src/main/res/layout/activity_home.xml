<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.alt.letseatingtime_android.ui.activity.HomeActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#eeeeee"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/studentcard"
                android:layout_width="330dp"
                android:layout_height="490dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="60dp"
                android:background="@drawable/cardview"
                android:elevation="2dp">

                <!-- 학 생 증 -->

                <View
                    android:id="@+id/studentcard_group"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginLeft="225dp"
                    android:layout_marginTop="-65dp"
                    android:layout_marginEnd="-45dp"
                    android:background="@drawable/stcard1" />

                <!-- Auto layout, variables, and unit scale are not yet supported -->

                <!-- Auto layout, variables, and unit scale are not yet supported -->

                <View
                    android:id="@+id/studentcard_group2"
                    android:layout_width="52dp"
                    android:layout_height="63dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="-19dp"
                    android:layout_marginLeft="-19dp"
                    android:layout_marginTop="459dp"
                    android:layout_marginBottom="-30dp"
                    android:background="@drawable/stcard2" />

                <TextView
                    android:id="@+id/stutent"
                    android:layout_width="125dp"
                    android:layout_height="45dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="102dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:text="학생증"
                    android:fontFamily="@font/pretendardbold"
                    android:textAlignment="center"
                    android:textAppearance="@style/some_id2" />
                <!--
                Font family: Basic
                Line height: 45sp
                -->

                <TextView
                    android:id="@+id/student2"
                    android:fontFamily="@font/pretendardlight"
                    android:layout_width="125dp"
                    android:layout_height="15dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="102dp"
                    android:layout_marginTop="55dp"
                    android:gravity="center"
                    android:text="student id card"
                    android:textAlignment="center"
                    android:textAppearance="@style/some_id3" />

                <ImageView
                    android:id="@+id/student_image"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="89dp"
                    android:layout_marginTop="76dp"
                    android:background="#484848" />


                <TextView
                    android:id="@+id/name_id"
                    android:fontFamily="@font/pretendardmedium"
                    android:text="이름"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="114dp"
                    android:layout_marginTop="289dp"
                    android:gravity="center_horizontal"
                    android:textAppearance="@style/some_id" />

                <TextView
                    android:id="@+id/trash_id"
                    android:fontFamily="@font/pretendardmedium"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="330dp"
                    android:gravity="center_horizontal"
                    android:text="학년 반 번호"
                    android:textAppearance="@style/trash_id" />


                <!-- 위 학생을 본교 학생으로 인정합니다 -->
                <TextView
                    android:id="@+id/trash_id2"
                    android:fontFamily="@font/pretendardlight"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="370dp"
                    android:gravity="center_horizontal"
                    android:text="위 학생을 본교 학생으로 인정합니다"
                    android:textAppearance="@style/trash_id2" />

                <!-- 대소고_로고 1 -->
                <View
                    android:id="@+id/dgsw"
                    android:layout_width="140dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="440dp"
                    android:background="@drawable/dgsw" />

                <!-- 대구소프트웨어고등학교 -->
                <TextView
                    android:id="@+id/trash_id3"
                    android:fontFamily="@font/pretendardlight"
                    android:layout_width="130dp"
                    android:layout_height="15dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="170dp"
                    android:layout_marginTop="453dp"
                    android:gravity="top"
                    android:text="대구소프트웨어고등학교"
                    android:textAppearance="@style/trash_id3" />

            </RelativeLayout>

            <!-- Rectangle 22 -->

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="330dp"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/cardview"
                android:elevation="2dp">

                <TextView
                    android:id="@+id/meal_menu"
                    android:fontFamily="@font/pretendardmedium"
                    android:text="급식"
                    android:layout_marginRight="20dp"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="330dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/cardview"
                android:elevation="2dp"
                android:orientation="vertical">


                <!-- 나의 급식 현황 -->
                <TextView
                    android:id="@+id/my_cafeteria_id"
                    android:fontFamily="@font/pretendardbold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="나의 급식 현황"
                    android:textAppearance="@style/mycafe_id"
                    android:layout_marginTop="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/today"
                    android:fontFamily="@font/pretendardmedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="날짜"
                    android:textAppearance="@style/mycafe_id"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/my_cafeteria_id" />

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/viewPager_idol"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToPadding="false"
                    android:clipChildren="false" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/logout"
                android:layout_width="330dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button2"
                android:text="로그아웃"
                android:fontFamily="@font/pretendardmedium"
                android:textColor="@color/white" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/withdrawal"
                android:layout_width="330dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"
                android:background="@drawable/button2"
                android:text="회원탈퇴"
                android:textColor="@color/white" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>