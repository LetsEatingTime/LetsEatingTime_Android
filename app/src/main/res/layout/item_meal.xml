<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="330dp"
    android:layout_height="65dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/meal_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아침"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/meal_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="도깨비주먹밥, 콘옥수수샐러드, 스틱단무지"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/meal_time" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/meal_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="코코볼시리얼+우유, 베이글in에그"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/meal_1" />

</androidx.constraintlayout.widget.ConstraintLayout>