<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.alt.letseatingtime_android.ui.activity.MainActivity">



    <ImageView
        android:id="@+id/iv_main1"
        android:layout_marginTop="37dp"
        android:layout_width="277dp"
        android:layout_height="277dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/img_main"/>
    <ImageView
        android:id="@+id/iv_main2"
        android:layout_width="435dp"
        android:layout_height="367dp"
        android:layout_marginTop="246dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/img_eating_food"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_login_submit"
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:layout_marginTop="21dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_main2"
        android:text="로그인"
        style="@style/btn_main_login_submit"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_signup_submit"
        android:layout_width="280dp"
        android:layout_height="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_login_submit"
        android:text="회원가입"
        style="@style/btn_main_signup_submit"/>



</androidx.constraintlayout.widget.ConstraintLayout>