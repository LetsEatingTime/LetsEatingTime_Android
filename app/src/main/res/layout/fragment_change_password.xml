<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ChangePasswordFragment">

    <ImageView
        android:id="@+id/iv_eating_food"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="35dp"
        android:paddingTop="30dp"
        android:src="@drawable/img_eating_food"
        app:layout_constraintBottom_toTopOf="@id/btn_submit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_find_title_pw"
        style="@style/tv_signup_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendardsemibold"
        android:text="회원님의 비밀번호 변경을위해..."
        android:layout_marginTop="30dp"
        android:layout_marginStart="3dp"
        app:layout_constraintStart_toStartOf="@id/et_id"
        app:layout_constraintTop_toTopOf="parent"
        />

    <EditText
        android:id="@+id/et_id"
        style="@style/et_login"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:hint="현재 아이디를 입력해주세요"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:layout_marginTop="13dp"
        android:fontFamily="@font/pretendardregular"
        android:layout_marginEnd="27dp"
        android:layout_marginStart="27dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_find_title_pw" />


    <EditText
        android:id="@+id/et_current_pw"
        style="@style/et_login"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginTop="13dp"
        android:fontFamily="@font/pretendardregular"
        android:layout_marginEnd="27dp"
        android:layout_marginStart="27dp"
        android:hint="현재 비밀번호를 입력해주세요"
        android:inputType="textPassword"
        android:maxLines="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_id" />

    <EditText
        android:id="@+id/et_new_pw"
        style="@style/et_login"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginTop="13dp"
        android:fontFamily="@font/pretendardregular"
        android:layout_marginEnd="27dp"
        android:layout_marginStart="27dp"
        android:hint="변경할 비밀번호를 입력해주세요"
        android:inputType="textPassword"
        android:maxLines="1"
        app:layout_constraintStart_toStartOf="@id/et_id"
        app:layout_constraintTop_toBottomOf="@id/et_current_pw" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_submit"
        style="@style/btn_find_pw_submit"
        android:layout_marginBottom="48dp"
        android:fontFamily="@font/pretendardmedium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>