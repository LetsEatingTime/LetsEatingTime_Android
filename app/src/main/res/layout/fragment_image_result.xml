<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.alt.letseatingtime_android.ui.fragment.scan.ImageResultFragment"
    android:background="@color/black">
    
    <ImageView
        android:id="@+id/iv_result"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_use"
        />
    <TextView
        android:id="@+id/tv_use"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사용하기"
        android:textSize="20sp"
        android:fontFamily="@font/pretendardsemibold"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_re_scan"
        android:layout_marginBottom="30dp"
        android:textColor="@color/white"
        />
    <TextView
        android:id="@+id/tv_re_scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="다시찍기"
        android:textSize="20sp"
        android:fontFamily="@font/pretendardsemibold"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_use"
        android:layout_marginBottom="30dp"
        android:textColor="@color/white"
        />




</androidx.constraintlayout.widget.ConstraintLayout>